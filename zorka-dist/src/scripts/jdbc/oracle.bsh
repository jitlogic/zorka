__oracle() {

  spy.add(sql._instrumentStmt("${THIS.connection.database}")
    .include(
      spy.byMethod(0, "oracle.jdbc.driver.OracleStatement", "execute*", null, "String")));

  spy.add(sql._instrumentPStmt("${THIS.connection.database}", "${THIS.originalSql}")
    .include(
      spy.byMethod(0, "oracle.jdbc.driver.OraclePreparedStatement", "execute*", null, spy.SM_NOARGS),
      spy.byMethod(0, "oracle.jdbc.driver.OracleCallableStatement", "execute*", null, spy.SM_NOARGS)));

  return this;
}


oracle = __oracle();

