<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
    <ui:style>
        .cellTable {
            border-bottom: 1px solid #ccc;
            text-align: left;
            margin-bottom: 4px;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:north size="25">
            <g:HorizontalPanel>
                <g:Button ui:field="btnClose" text="Close"/>
            </g:HorizontalPanel>
        </g:north>
        <g:center style="margin-top: 5px;">
            <c:DataGrid ui:field="traceTable" addStyleNames="{style.cellTable}"/>
        </g:center>
        <g:south size="25">
            <g:HTMLPanel>
                <table style="width:100%">
                    <tr>
                        <td align="center">
                            <c:SimplePager ui:field="pager" location="CENTER"/>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>
